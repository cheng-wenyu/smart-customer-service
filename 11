name: CI/CD Pipeline for Smart Customer Service
# 触发条件：推送到 main 分支，或手动触发
on:
  push:
    branches: [ main ]
  workflow_dispatch: # 允许在GitHub页面上手动触发

# 定义环境变量（方便后续修改）
env:
  REGISTRY: docker.io # 或您的私有仓库 registry.cn-hangzhou.aliyuncs.com
  IMAGE_NAME: ${{ github.repository }} # 默认使用 '你的用户名/仓库名'
  # 部署服务器信息（将通过GitHub Secrets设置）
  DEPLOY_HOST: ${{ secrets.DEPLOY_HOST }}
  DEPLOY_USER: ${{ secrets.DEPLOY_USER }}
  SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}

jobs:
  # 1. 测试阶段：运行代码检查与单元测试
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install Dependencies
        run: |
          python -m pip install --upgrade pip
          # 如果存在 requirements.txt
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi
          # 安装测试所需依赖
          pip install pytest pytest-cov

      - name: Lint with Flake8 (代码风格检查)
        run: |
          pip install flake8
          # 停止构建如果存在Python语法错误或未定义的名称
          flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics
          # 可选的：输出所有警告（但不阻止构建）
          flake8 . --count --exit-zero --max-complexity=10 --statistics

      - name: Test with Pytest
        run: |
          # 运行 tests/ 目录下的所有测试
          python -m pytest tests/ -v --cov=src --cov-report=xml

      # 可选：上传测试覆盖率报告到GitHub（需要配置token）
      - name: Upload Coverage to GitHub
        uses: codecov/codecov-action@v3
        with:
          file: ./coverage.xml
          fail_ci_if_error: false

  # 2. 构建与推送Docker镜像阶段（仅当测试通过且是main分支时执行）
  build-and-push:
    needs: test
    runs-on: ubuntu-latest
    # 仅当推送到 main 分支，或者手动触发时才运行此job
    if: github.ref == 'refs/heads/main' || github.event_name == 'workflow_dispatch'
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Log in to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Extract Metadata (tags, labels) for Docker
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: |
            type=sha,prefix={{branch}}-,format=short
            type=ref,event=branch
            latest

      - name: Build and Push Docker Image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  # 3. 自动部署到服务器阶段
  deploy:
    needs: build-and-push
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main' # 仅main分支自动部署
    steps:
      - name: Checkout Code (用于获取docker-compose.yml等文件)
        uses: actions/checkout@v4

      - name: Deploy to Server via SSH
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ env.DEPLOY_HOST }}
          username: ${{ env.DEPLOY_USER }}
          key: ${{ env.SSH_PRIVATE_KEY }}
          # 在部署服务器上执行的命令序列
          script: |
            # 1. 进入项目目录（假设已克隆在服务器上）
            cd ~/smart-customer-service
            
            # 2. 更新代码（可选，如果使用镜像部署，可跳过）
            git pull origin main
            
            # 3. 拉取最新的Docker镜像
            docker-compose pull
            
            # 4. 重启服务（使用新的镜像）
            docker-compose up -d --remove-orphans
            
            # 5. 清理旧的、未使用的镜像，释放空间
            docker image prune -f
            
            echo "✅ 部署完成！"





